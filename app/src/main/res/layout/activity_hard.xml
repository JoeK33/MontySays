<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.myreliablegames.joe.montysays.HardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">


        <TextView
            style="@style/ScoreTheme"
            android:id="@+id/currentScoreTitle"
            android:text="Current Round"
            android:layout_weight="1"/>

        <TextView
            style="@style/ScoreTheme"
            android:id="@+id/highScoreTitle"
            android:text="High Score"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal">




        <TextView
            style="@style/ScoreTheme"
            android:id="@+id/currentScore"
            android:text=""
            android:layout_weight="1"/>

        <TextView
            style="@style/ScoreTheme"
            android:id="@+id/highScore"
            android:text=""
            android:layout_weight="1"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/hardButton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/button1"
            android:layout_weight="1"
            android:background="#0000"/>

        <ImageButton
            android:id="@+id/hardButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/button2"
            android:layout_weight="1"
            android:background="#0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/hardButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/button3"
            android:layout_weight="1"
            android:background="#0000"/>

        <ImageButton
            android:id="@+id/hardButton4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/button4"
            android:layout_weight="1"
            android:background="#0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/hardButton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/button5"
            android:layout_weight="1"
            android:background="#0000"/>

        <ImageButton
            android:id="@+id/hardButton6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/button6"
            android:layout_weight="1"
            android:background="#0000"/>
    </LinearLayout>


</LinearLayout>
